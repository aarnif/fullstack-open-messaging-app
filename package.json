{
  "name": "fullstack-open-messaging-app",
  "version": "1.0.0",
  "description": "The Full Stack Open Course Project: Messaging App",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start:db": "docker compose -f docker-compose.dev.yml up",
    "populate:db": "node backend/populateDatabase.js",
    "dev:server": "NODE_ENV=development nodemon backend/index.js",
    "dev:ui": "NODE_ENV=development vite --config frontend/vite.config.js",
    "build:ui": "vite build --config frontend/vite.config.js",
    "test:ui": "NODE_ENV=test vitest run --config frontend/vite.config.js",
    "test:server": "NODE_ENV=test jest --runInBand --rootDir backend",
    "test:e2e": "playwright test",
    "test:e2e:report": "playwright show-report",
    "lint": "eslint frontend --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "prod:ui": "vite preview --config frontend/vite.config.js",
    "prod:server": "NODE_ENV=production node backend/index.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/client": "^3.11.8",
    "@apollo/server": "^4.10.4",
    "@graphql-tools/schema": "^10.0.4",
    "@mdi/js": "^7.4.47",
    "@mdi/react": "^1.6.1",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "emoji-picker-react": "^4.12.0",
    "emoji-regex": "^10.3.0",
    "express": "^4.19.2",
    "express-async-handler": "^1.2.0",
    "framer-motion": "^11.11.8",
    "graphql": "^16.9.0",
    "graphql-redis-subscriptions": "^2.7.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-ws": "^5.16.0",
    "ioredis": "^5.4.2",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mongoose": "^8.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.3.0",
    "react-router": "^7.1.1",
    "ws": "^8.17.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.4",
    "@playwright/test": "^1.49.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^15.0.7",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.9.0",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^3.0.8",
