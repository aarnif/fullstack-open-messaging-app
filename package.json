    "babel-jest": "^29.7.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "eslint-plugin-vitest-globals": "^1.5.0",
    "jest": "^29.7.0",
    "jsdom": "^26.0.0",
    "jsdom-testing-mocks": "^1.13.1",
    "nodemon": "^3.1.3",
    "postcss": "^8.4.38",
    "supertest": "^7.0.0",
    "tailwindcss": "^3.4.3",
    "vite": "^5.2.0",
